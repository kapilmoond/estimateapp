; Test 3: Complex Building Layout
; Design a 3-room building layout 15m x 10m with internal walls creating rooms of 5m x 10m each

; Setup layers
(layer "CONSTRUCTION")
(color 1)

; Main building outline 15m x 10m
(rectangle 0 0 15000 10000)

; Internal walls creating 3 rooms (5m x 10m each)
(line 5000 0 5000 10000)
(line 10000 0 10000 10000)

; Door openings 1m wide
; Room 1 door
(line 2000 0 3000 0)
; Room 2 door  
(line 7000 0 8000 0)
; Room 3 door
(line 12000 0 13000 0)

; Window openings 1.5m wide
; Room 1 window
(line 1000 10000 2500 10000)
; Room 2 window
(line 6250 10000 7750 10000)
; Room 3 window
(line 11250 10000 12750 10000)

; Switch to dimensions layer
(layer "DIMENSIONS")
(color 5)

; Overall dimensions
(dimension 0 0 15000 0 7500 -1500)
(dimension 0 0 0 10000 -1500 5000)
(text 7500 -2000 300 "15000mm")
(text -2000 5000 300 "10000mm")

; Room dimensions
(dimension 0 0 5000 0 2500 -800)
(dimension 5000 0 10000 0 7500 -800)
(dimension 10000 0 15000 0 12500 -800)
(text 2500 -1200 250 "5000mm")
(text 7500 -1200 250 "5000mm")
(text 12500 -1200 250 "5000mm")

; Add room labels
(layer "TEXT")
(color 7)
(text 2500 5000 400 "ROOM 1")
(text 7500 5000 400 "ROOM 2")
(text 12500 5000 400 "ROOM 3")
(text 7500 11000 500 "3-ROOM BUILDING PLAN")
(text 7500 -3000 300 "SCALE 1:100")
